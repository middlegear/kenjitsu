{
  "name": "hakai-api",
  "version": "1.0.0",
  "description": "api serving anime media information",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "start": "tsx src/server.ts",
    "commit": "cz",
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "lint": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/middlegear/hakai-api.git"
  },
  "keywords": [
    "anime",
    "scraper"
  ],
  "author": "middlegear",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/middlegear/hakai-api/issues"
  },
  "homepage": "https://github.com/middlegear/hakai-api#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^22.16.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^8.2.0",
    "dotenv": "^16.6.1",
    "fastify": "^5.4.0",
    "hakai-extensions": "github:middlegear/hakai-extensions#main",
    "ioredis": "^5.6.1"
  }
}